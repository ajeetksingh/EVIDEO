#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
[ -f .done-mac ] && exit 0
pkg=`getcfg PKG:`
chkpkg "$pkg" || exit 1
dir=`getcfg DIR:`
[ -z "$dir" -o "$dir" = "/" ] && exit 1
#
rm -fr "$dir" "${dir}-mac"
[ $? -ne 0 ] && exit 1
gzip -dc "$pkg" | tar -xv
[ ${PIPESTATUS[0]} -ne 0 -o ${PIPESTATUS[1]} -ne 0 ] && exit 1
mv "$dir" "${dir}-mac"
[ $? -ne 0 ] && exit 1
cd "${dir}-mac"
[ $? -ne 0 ] && exit 1
#
rm -fr .hg*
[ $? -ne 0 ] && exit 1
#cp ../compat.h colib
#[ $? -ne 0 ] && exit 1
#cp ../quicksort.h colib
#[ $? -ne 0 ] && exit 1
#cp ../narray.h colib
#[ $? -ne 0 ] && exit 1
#cp ../io_jpeg.cc imgio
#[ $? -ne 0 ] && exit 1
cp ../test-pbmpng.cc imgio/tests
[ $? -ne 0 ] && exit 1
cp ../SConstruct.mac SConstruct
[ $? -ne 0 ] && exit 1
#
#  make all = scons
#   install = scons install
#     clean = scons -c
# uninstall = scons -c install
#
# scons -Q <option>=<value>
#   Option  Help                                       Value
#   opt     Compiler flags for optimization/debugging  "-g -O3"
#   warn    Compiler flags for warnings                "-Wall -D__warn_unused_result__=__far__"
#   prefix  The installation root for iulib            "/usr/local"
#
scons --debug=findlibs
[ $? -ne 0 ] && exit 1
sudox scons install
[ $? -ne 0 ] && exit 1
#
touch ../.done-mac
[ $? -ne 0 ] && exit 1
exit 0
