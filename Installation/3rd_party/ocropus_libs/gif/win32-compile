#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
[ -f .done-win32 ] && exit 0
pkg=`getcfg PKG:`
chkpkg "$pkg" || exit 1
dir=`getcfg DIR:`
[ -z "$dir" -o "$dir" = "/" ] && exit 1
pcp=`getcfg PCP:`
[ -z "$pcp" ] && exit 1
#
rm -fr "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
gzip -dc "$pkg" | tar -xv
[ ${PIPESTATUS[0]} -ne 0 -o ${PIPESTATUS[1]} -ne 0 ] && exit 1
mv "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
cd "${dir}-win32"
[ $? -ne 0 ] && exit 1
#
./configure \
--host=${MINGW32} \
LIBS=-lws2_32
[ $? -ne 0 ] && exit 1
make
[ $? -ne 0 ] && exit 1
#
sudox cp lib/gif_lib.h ${MINGW32_PREFIX}/include
[ $? -ne 0 ] && exit 1
sudox cp lib/.libs/libgif.a ${MINGW32_PREFIX}/lib
[ $? -ne 0 ] && exit 1
#
zip -j "../$pcp" lib/gif_lib.h
[ $? -ne 0 ] && exit 1
zip -j "../$pcp" lib/.libs/libgif.a
[ $? -ne 0 ] && exit 1
zip -j "../$pcp" test-unx
[ $? -ne 0 ] && exit 1
zip "../$pcp" util/*.exe
[ $? -ne 0 ] && exit 1
zip "../$pcp" pic/*.gif
[ $? -ne 0 ] && exit 1
#
touch ../.done-win32
[ $? -ne 0 ] && exit 1
exit 0
