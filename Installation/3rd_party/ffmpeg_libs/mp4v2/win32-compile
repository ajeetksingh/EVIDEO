#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
[ -f .done-win32 ] && exit 0
pkg=`getcfg PKG:`
chkpkg "$pkg" || exit 1
dir=`getcfg DIR:`
[ -z "$dir" -o "$dir" = "/" ] && exit 1
pcp=`getcfg PCP:`
[ -z "$pcp" ] && exit 1
#
rm -fr "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
bzip2 -dc "$pkg" | tar -xv
[ ${PIPESTATUS[0]} -ne 0 -o ${PIPESTATUS[1]} -ne 0 ] && exit 1
mv "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
cd "${dir}-win32"
[ $? -ne 0 ] && exit 1
#
patch -p0 < ../mp4v2r355.patch
[ $? -ne 0 ] && exit 1
./configure \
--host=${MINGW32}
[ $? -ne 0 ] && exit 1
make
[ $? -ne 0 ] && exit 1
#
mkdir mp4v2
[ $? -ne 0 ] && exit 1
cp include/mp4v2/*.h mp4v2
[ $? -ne 0 ] && exit 1
sudox rm -fr ${MINGW32_PREFIX}/include/mp4v2
[ $? -ne 0 ] && exit 1
sudox mkdir -p ${MINGW32_PREFIX}/include/mp4v2
[ $? -ne 0 ] && exit 1
sudox cp mp4v2/*.h ${MINGW32_PREFIX}/include/mp4v2
[ $? -ne 0 ] && exit 1
sudox cp .libs/libmp4v2.a ${MINGW32_PREFIX}/lib
[ $? -ne 0 ] && exit 1
#
zip "../$pcp" mp4v2/*.h
[ $? -ne 0 ] && exit 1
zip -j "../$pcp" .libs/libmp4v2.a
[ $? -ne 0 ] && exit 1
zip -j "../$pcp" *.exe
[ $? -ne 0 ] && exit 1
#
touch ../.done-win32
[ $? -ne 0 ] && exit 1
exit 0
