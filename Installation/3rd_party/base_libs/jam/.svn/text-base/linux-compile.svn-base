#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
[ -f .done-linux ] && exit 0
pkg=`getcfg PKG:`
chkpkg "$pkg" || exit 1
dir=`getcfg DIR:`
[ -z "$dir" -o "$dir" = "/" ] && exit 1
#
rm -fr "$dir" "${dir}-linux"
[ $? -ne 0 ] && exit 1
mkdir "${dir}-linux"
[ $? -ne 0 ] && exit 1
cd "${dir}-linux"
[ $? -ne 0 ] && exit 1
unzip -ao "../$pkg"
[ $? -ne 0 ] && exit 1
#
cp ../Jamfile .
[ $? -ne 0 ] && exit 1
make
[ $? -ne 0 ] && exit 1
#
# Copy bin.linuxx86/jam to ${LOCAL_PREFIX}/bin
sudox ./jam0 install
[ $? -ne 0 ] && exit 1
#
touch ../.done-linux
[ $? -ne 0 ] && exit 1
exit 0
